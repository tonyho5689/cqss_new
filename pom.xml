        <module>CqssCommon</module>
        <module>CqssStartup</module>
        <module>CqssVo</module>
        <module>CqssDB</module>
        <module>CqssEjbUtil</module>
        <module>CqssBatchJobDB</module>
        <module>CqssApplet</module>
        <module>CqssEjbTestClient</module>
        <module>CqssIntraEjb</module>
        <module>CqssIntraEAR</module>
        <module>CqssIntranetWeb</module>
        <module>CqssSecurityAdmin</module>
        <module>CqssSvr</module>
        <module>Ibator</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- Internal module dependencies -->
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssCommon</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssStartup</artifactId>
