            <dependency>
                <groupId>org.apache.ibatis</groupId>
                <artifactId>ibatis-sqlmap</artifactId>
                <version>2.3.0</version>
            </dependency>

            <!-- External libraries -->
            <dependency>
                <groupId>com.ocbc.hk.apps</groupId>
                <artifactId>AppCore</artifactId>
                <version>1.0.0</version>
                <scope>system</scope>
                <systemPath>${project.basedir}/../lib/AppCore.jar</systemPath>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps</groupId>
                <artifactId>AppMsg</artifactId>
                <version>1.0.0</version>
                <scope>system</scope>
                <systemPath>${project.basedir}/../lib/AppMsg.jar</systemPath>
