                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssIntraEjb</artifactId>
                <version>${project.version}</version>
                <type>ejb-client</type>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssIntraEAR</artifactId>
                <version>${project.version}</version>
                <type>ear</type>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssIntranetWeb</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssSecurityAdmin</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>CqssSvr</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.ocbc.hk.apps.cqss</groupId>
                <artifactId>Ibator</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Common external dependencies -->
            <!-- Apache Commons -->
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.1.1</version>
            </dependency>
            <dependency>
                <groupId>commons-beanutils</groupId>
                <artifactId>commons-beanutils</artifactId>
